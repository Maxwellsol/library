<p id="notice"><%= notice %></p>

<h1><%= books_header_title %></h1>
<table class = "table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Isbn</th>
      <th>Author</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.description %></td>
        <td><%= book.isbn %></td>
        <td><%=link_to books_path({author_id: book.author_id}) do%>
              <%= book.author.name %>(<%= book.count_books_of_author %>)
            <% end %></td>>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
